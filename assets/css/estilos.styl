$colorAcento = #E26E64
$colorAcentoHover = #E45D51
$colorBlanco = #ffffff
$colorFondo = #f5f5f5
$colorPrincipal = #009688
$colorTextoPrimario = #5c5c5c

border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments

/* ------------------------------------------------------------
 * @ Iniciamos estilos.css
 * [ Estilos globales ]
 * ------------------------------------------------------------ */
a
	outline none
body
	background-color $colorFondo
	color $colorTextoPrimario
	font-family 'Roboto', sans-serif
	font-size 1em
ul
	list-style none
	margin 0
	padding 0

/* ------------------------------------------------------------
 * @ centrar-contenido
 * ------------------------------------------------------------ */
.centrar-contenido
	margin 0 auto
	max-width 800px
	width 100%

/* ------------------------------------------------------------
 * @ tarjeta-contenido
 * ------------------------------------------------------------ */
.tarjeta-contenido
    background: $colorBlanco
    border-radius(2px)
    box-shadow: 0 1px 1px 0 rgba(0,0,0,.06),0 2px 5px 0 rgba(0,0,0,.2)
    font-size 1em
    margin 0.5em
    min-height 200px
    overflow hidden
    position relative
    z-index: 1
    .tarjeta-titulo
    	border-bottom 1px solid rgba(0,0,0,0.1)
    	font-size 1.2em
    	font-weight 300
    	margin 0
    	padding 20px 33px
    .tarjeta-interior
    	font-size 0.95em
    	font-weight 300
    	line-height 1.5em
    	margin 0
    	overflow hidden
    	padding 20px 25px

/* ------------------------------------------------------------
 * @ grilla
 * ------------------------------------------------------------ */
.grilla
	display inline-block
	box-sizing border-box
	.grilla-contenido
		display block
		margin 8px

.grilla-50
	width 75%

.grilla-100
	width 100%
	
/* ------------------------------------------------------------
 * @ boton-flotante
 * ------------------------------------------------------------ */
.boton-flotante
	background $colorAcento
	border-radius(60px)
	box-shadow: 0 1px 1px 0 rgba(0,0,0,.06),0 2px 5px 0 rgba(0,0,0,.2)
	bottom 30px
	display block
	height 60px
	line-height 60px
	position fixed
	right 25px
	text-align center
	width 60px
	z-index 99
	img
		vertical-align middle
	&:hover
		background $colorAcentoHover
		
/* ------------------------------------------------------------
 * @ boton-rectangular
 * ------------------------------------------------------------ */
.boton-rectangular
	background none
	border 1px solid $colorBlanco
	color $colorBlanco
	display inline-block
	padding 10px 15px
	text-decoration none
	
/* ------------------------------------------------------------
 * @ cabecera
 * ------------------------------------------------------------ */
.cabecera
	padding 10px 2%
	position relative
	top 0px
	width 96%
	z-index 9
	.logo
		display inline-block
		margin 0
		img
		span
			vertical-align middle
		span
			color $colorBlanco
			font-size 0.9em
			font-weight 100
			letter-spacing 0.02em
	.social
		float right
		height 47px
		line-height 47px
		a.linkedin
		a.twitter
			background-position center center
			background-repeat no-repeat
			display inline-block
			height 27px
			vertical-align middle
			width 27px
		a.linkedin
			background-image url(../img/ic-linkedin.png)
		a.twitter
			background-image url(../img/ic-twitter.png)

/* ------------------------------------------------------------
 * @ particleground
 * ------------------------------------------------------------ */			
.particleground
	background-color $colorPrincipal
	height 100%
	position absolute
	top 0
	width 100% 
	
/* ------------------------------------------------------------
 * @ footer
 * ------------------------------------------------------------ */
.footer
	height 60px
	margin-top 50px
	.footer-contenido
		background-color $colorBlanco
		line-height 60px
		height 60px
		padding 0 2%
		width 96%
		img
			display inline-block
			height 35px
			margin-left 5px
			vertical-align middle
		p
			color rgba(0,0,0,.26)
			display inline-block
			font-size 0.75em
			margin 0 0 0 5px
			vertical-align middle
		&.footer-fixed
			position fixed
			bottom 0
			left 0
		
/* ------------------------------------------------------------
 * @ banner 
 * [ Home ]
 * ------------------------------------------------------------ */
.banner
	height 440px
	position relative
	width 100%
	h1
		color $colorBlanco
		font-weight 100
		font-size 1.9em
		letter-spacing 0.02em
		position relative
		margin: 3.5em 8px 0;
		text-align center
		span
			display block
			line-height  normal

/* ------------------------------------------------------------
 * @ perfil-tecnico
 * [ Home ]
 * ------------------------------------------------------------ */
.perfil-tecnico
	margin-top -6em

/* ------------------------------------------------------------
 * @ navegadores
 * [ Navegador Obsoleto ]
 * ------------------------------------------------------------ */
.navegadores
	margin-top 50px
	li
		text-align center
		a
			color $colorTextoPrimario

/* ------------------------------------------------------------
 * @ pagina-error 
 * [ error404 ]
 * ------------------------------------------------------------ */
.body-pagina-error
	background $colorPrincipal
.pagina-error
	color $colorBlanco
	font-weight 100
	margin 15% auto 30px
	position relative
	text-align center
	.pagina-error-titulo
		font-size 3em
		margin 20px 0 10px
	.pagina-error-texto
		margin 0 0 30px 0
		
/* ------------------------------------------------------------
 * @ media screen
 * [ Responsive design -> 768px ]
 * ------------------------------------------------------------ */
@media screen and (min-width:768px)
	/* --------------------------------------------------------
	 * @ banner
	 * -------------------------------------------------------- */
	.banner
		h1
			font-size 2.4em
	/* --------------------------------------------------------
	 * @ grilla
	 * -------------------------------------------------------- */
	.grilla-50
		float left
		width 50%






	